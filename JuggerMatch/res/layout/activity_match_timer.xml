<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MatchTimer"
    android:orientation="vertical" >
    
<LinearLayout
    android:id="@+id/timerControlswrapper"
    android:layout_width="match_parent"
    android:layout_height="0dip"
    android:layout_weight=".1"
    android:orientation="horizontal"
    >
  
   <ImageView
       android:id="@+id/rollbackbutton"
       android:src="@drawable/rollback"
   	   android:layout_width="0dip"
	   android:layout_height="match_parent"
       android:layout_alignParentLeft="true"
       android:adjustViewBounds="true"
       android:layout_weight="0.1"
       android:clickable="true"
	 />
   
   <ImageView
       android:id="@+id/statusarea"
       android:layout_width="0dip"
       android:layout_height="match_parent"
       android:layout_weight="0.8"
   />
   <ImageView
       android:id="@+id/fastforwardbutton"
       android:src="@drawable/fastforward"
  	   android:layout_width="0dip"
	   android:layout_height="match_parent"
       android:layout_alignParentRight="true"
       android:adjustViewBounds="true"
       android:layout_weight="0.1"
     />
   
</LinearLayout>

<RelativeLayout
       android:id="@+id/timerwrapper"
       android:layout_width="match_parent"
       android:layout_height="0dip"
       android:layout_weight=".4"
     >
 <ImageView
     android:id="@+id/timerbackground"
     android:src="@drawable/timercircle"
     android:layout_centerInParent="true"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:adjustViewBounds="true"
    />


    
</RelativeLayout>

<LinearLayout
    android:id="@+id/teamswrapper"
    android:layout_height="0dip"
    android:layout_width="match_parent"
    android:layout_weight="0.1"
    android:orientation="horizontal">
 
<TextView
    android:id="@+id/teama"
    android:layout_width="0dip"
    android:layout_height="match_parent"
    android:text="TEAM A"
    android:layout_weight="11"
    />
<TextView
    android:id="@+id/teamdivider"
    android:layout_width="0dip"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:text="|"
    />
<TextView
    android:id="@+id/teamb"
    android:layout_width="0dip"
    android:layout_height="match_parent"
    android:text="TEAM B"
    android:layout_weight="11"
    />
    
</LinearLayout>

<LinearLayout
    android:id="@+id/scoreswrapper"
    android:layout_weight=".2"
    android:layout_height="0dip"
    android:layout_width="match_parent"
    >
    
<RelativeLayout
    android:id="@+id/teamascorebutton"
    android:layout_width="0dip"
    android:layout_height="match_parent"
    android:background="#f00"
    android:layout_weight="1"
    >
</RelativeLayout>
<ImageView
    android:id="@+id/finishbutton"
    android:layout_width="0dip"
    android:layout_height="match_parent"
    android:layout_weight="2"
    />   
    
<RelativeLayout
    android:id="@+id/teamascorebutton"
    android:layout_width="0dip"
    android:layout_height="match_parent"
    android:background="#00f"
    android:layout_weight="1"
    > 

</RelativeLayout>
</LinearLayout>


    
</LinearLayout>
